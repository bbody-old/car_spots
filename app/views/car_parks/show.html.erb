<%- model_class = CarPark -%>

<% content_for :title do %>
  <div class="row" id="back-button-row">
    <%= link_to "Back", car_parks_url, class: "btn btn-default", id: "back-button" %>
  </div>
<% end %>

<div class="row">
  <div class="col-md-12">
    <%= image_tag @car_park.image, class: "img-responsive" %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <h2><i class="fa fa-home"></i> <%= @car_park.name %></h2>
  </div>
  <div class="col-md-6">
    <h3>Description</h3>
    <p><%= @car_park.description %></p>
    <h3>Address</h3>
    <%= @car_park.address %></p>
  </div>
  <div class="col-md-6">
    <h3>Features</h3>
    <%= raw english_rep @car_park.covered %><strong> Covered</strong><br />
    <%= raw english_rep @car_park.electrical %><strong> Electrical outlet</strong><br />
    <%= raw english_rep @car_park.large %><strong> Large vehicles</strong> 
    <h2>$10</h2>
  </div>
</div>
<div id="button-row" class="row">
<%= render :partial => 'bookings/form', :object => @booking %>

</div>

<div id="map-row" class="row">
  <%= raw maps_embed(@car_park.longitude, @car_park.lattitude) %>
</div>

